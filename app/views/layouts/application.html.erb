<!DOCTYPE html>
<html>
  <head>
    <title>SyncedUp</title>
    <script src="https://kit.fontawesome.com/38ca1258a1.js" crossorigin="anonymous"></script>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %> 

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= action_cable_meta_tag %>
    <% if current_user %>
      <script>
        window.currentUser = {
          'id': <%= current_user.id %>,
          'email': "<%= current_user.email %>",
          'firstName': "<%= current_user.first_name %>",
          'lastName': "<%= current_user.last_name %>",
          'pronouns': "<%= current_user.pronouns %>",
          'headline': "<%= current_user.headline %>",
          'numConnections': <%= current_user.connections.count %>,
          'connectionIds': <%= current_user.connections.pluck(:id) %>,
          'headshotUrl': "<%=  url_for(current_user.headshot) %>"
        }

        window.userbgUrl = "<%= image_url('userbg5.jpg') %>"
        window.companyUrl = "<%= image_url('company.png') %>"
        window.wendyUrl = "<%= image_url('wendy.jpg') %>"
        window.groupUrl = "<%= image_url('group2.png') %>"
      </script>
    <% end %>

  </head>


  <body>
    <%= yield %>
  </body>
</html>
